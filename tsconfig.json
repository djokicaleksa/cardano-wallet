{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "preact": [
        "app/node_modules/preact/dist/preact.d.ts"
      ]
    },
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "app/cypress/*"
  ]
}
